<%= form_with(model: @group, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @group %>

  <%= f.label :group_name, class: "label-signup" %>
  <%= f.text_field :group_name, class: "form-control" %>

  <%= f.label :goal, class: "label-signup" %>
  <%= f.text_field :goal, class: "form-control" %>

  <%= f.label :genre, class: "label-signup" %>
  <%= f.select :genre , [["自己啓発", "自己啓発"], ["ダイエット", "ダイエット"]], include_blank: "選択して下さい" , class: "form-control"%>

  <%= f.label :todo, class: "label-signup" %>
  <%= f.text_field :todo, class: "form-control" %>

  <%= f.label :frequency, class: "label-signup" %>
  <%= f.number_field :frequency, class: "form-control" %>

  <%= f.label :start_goal_day, class: "label-signup" %>
  <%= f.date_field :start_goal_day, class: "form-control" %>

  <%= f.label :end_goal_day, class: "label-signup" %>
  <%= f.date_field :end_goal_day, class: "form-control" %>

  <%= f.label :limit_members, class: "label-signup" %>
  <%= f.number_field :limit_members, class: "form-control" %>

  <%= f.hidden_field :owner_id, value:current_user.id %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup" %>
<% end %>